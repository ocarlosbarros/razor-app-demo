@page "~/categorias"
@model Categories
@{
    ViewData["Title"] = "Categorias";
}
<section>
<h2>Categorias</h2>
    <table>
        <thead>
            <tr>
                <td>ID</td>
                <td>Título</td>
                <td>Preço</td>
            </tr>
        </thead>
        <tbody>
                @foreach(var category in Model.CategoryList)
                {
                    <tr>
                        <td>@category.Id</td>
                        <td>@category.Title</td>
                        <td>@category.Price.ToString("C", new CultureInfo("pt-BR"))</td>
                    </tr>
                }
        </tbody>
    </table>
</section>